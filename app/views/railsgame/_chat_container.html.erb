<%
  url_options = {
    :controller => :railsgame,
    :action => :chat_to_channel,
    :channel => :chat,
    :outside_tag => "li",
    :update_fn => "RG.fn.append_to_container"
  }
  data_container_id ||= id + "_list"
  submit_text ||= "Chat"
  text_input_size ||= 20
  max_lines ||= 10
%>

<%= render :partial => "railsgame/console_container",
           :locals => { :id => id, :text_input_size => text_input_size,
                        :submit_text => submit_text,
                        :data_container_id => data_container_id,
                        :max_lines => max_lines,
                        :url_options => url_options } %>

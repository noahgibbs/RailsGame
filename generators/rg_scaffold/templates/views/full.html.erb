<%= stylesheet_link_tag 'game' %>

<%= render :partial => "railsgame/init" %>

<div id="world">
  <p id="world_debug"> </p>
  <p id="world_data"></p>
</div>

<%= form_remote_tag(:url => { :action => :send_action_text },
                    :complete => "$('action_text').value = ''" ) %>
  <%= text_field_tag('action_text', '', { :size => 30,
                                           :id => 'action_text' } ) %>
  <%= submit_tag "Do It" %>
</form>

